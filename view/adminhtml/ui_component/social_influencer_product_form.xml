<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">social_influencer_product_form.influencer_product_form_data_source</item>
		</item>
		<item name="label" translate="true" xsi:type="string">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button class="SajidPatel\SocialInfluencer\Block\Adminhtml\Influencer\Product\Edit\BackButton" name="back"/>
			<button class="SajidPatel\SocialInfluencer\Block\Adminhtml\Influencer\Product\Edit\DeleteButton" name="delete"/>
			<button class="SajidPatel\SocialInfluencer\Block\Adminhtml\Influencer\Product\Edit\SaveButton" name="save"/>
			<button class="SajidPatel\SocialInfluencer\Block\Adminhtml\Influencer\Product\Edit\SaveAndContinueButton" name="save_and_continue"/>
		</buttons>
		<namespace>social_influencer_product_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>social_influencer_product_form.influencer_product_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="influencer_product_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider class="SajidPatel\SocialInfluencer\Model\InfluencerProduct\DataProvider" name="influencer_product_form_data_source">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field formElement="input" name="sku" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Influencer_product</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">SKU</label>
				<dataScope>sku</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
        <field name="influencer_id">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">SajidPatel\SocialInfluencer\Model\Config\Source\Influencer</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Influencer</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">influencer</item>
                </item>
            </argument>
        </field>
        <field name="enabled" formElement="checkbox" sortOrder="150">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>boolean</dataType>
                <label translate="true">Enable Influencer</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">0</map>
                            <map name="true" xsi:type="string">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
	</fieldset>
</form>
